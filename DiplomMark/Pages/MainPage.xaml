                    </Border>


                </DataTemplate>
            </ListBox.ItemTemplate>-->

        </ListBox>

        <Label Grid.Row="2" Grid.Column="0" FontSize="25" HorizontalAlignment="Left" VerticalAlignment="Center" x:Name="LVBack" MouseDown="LVBack_MouseDown" Height="40" Width="23">&lt;</Label>
        <Label Grid.Row="2" Grid.Column="0" FontSize="25" HorizontalAlignment="Right"  VerticalAlignment="Center" x:Name="LvNext" MouseDown="LvNext_MouseDown" Height="40" Width="29"  >&gt;</Label>
    </Grid>

</Page>
